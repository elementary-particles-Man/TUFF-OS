# TUFF-OS minimal kernel config (UEFI PC, local TTY only)
CONFIG_SQUASHFS=y
CONFIG_OVERLAY_FS=y
CONFIG_SECURITY_DMESG_RESTRICT=y

# Core kernel features
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_DEVPTS_FS=y
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_TIMERFD=y
CONFIG_EVENTFD=y
CONFIG_INOTIFY_USER=y

# UEFI boot
CONFIG_EFI=y
CONFIG_EFI_STUB=y
CONFIG_EFI_PARTITION=y

# Console and input (local terminal only)
CONFIG_TTY=y
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_HW_CONSOLE=y
CONFIG_VGA_CONSOLE=y
CONFIG_INPUT=y
CONFIG_INPUT_KEYBOARD=y
CONFIG_KEYBOARD_ATKBD=y
CONFIG_INPUT_EVDEV=y
CONFIG_INPUT_MOUSE=y
CONFIG_HID=y
CONFIG_HID_GENERIC=y
CONFIG_USB_HID=y
# USB以外のHID/入力デバイスは無効化
# CONFIG_HID_I2C_HID is not set
# CONFIG_HID_MULTITOUCH is not set
# CONFIG_HID_SENSOR_HUB is not set
# CONFIG_INPUT_JOYSTICK is not set
# CONFIG_INPUT_TABLET is not set
# CONFIG_INPUT_TOUCHSCREEN is not set

# Storage (generic PC/servers)
CONFIG_PCI=y
CONFIG_ATA=y
CONFIG_SATA_AHCI=y
CONFIG_SCSI=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_NVME=y

# USB storage (for USB boot/install media)
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_UHCI_HCD=y
CONFIG_USB_STORAGE=y

# Filesystems
CONFIG_EXT4_FS=y
CONFIG_MSDOS_FS=y
CONFIG_VFAT_FS=y

# Disable networking
# CONFIG_NET is not set
# CONFIG_INET is not set
# CONFIG_IPV6 is not set
# CONFIG_WIRELESS is not set
# CONFIG_BT is not set
# CONFIG_NFC is not set

# Minimal display for UEFI GOP (stable console)
CONFIG_DRM=y
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_SIMPLEDRM=y
CONFIG_FB=y
CONFIG_FRAMEBUFFER_CONSOLE=y
# Disable graphics and sound stacks (no GUI)
# CONFIG_SOUND is not set
# CONFIG_SND is not set
# CONFIG_MEDIA_SUPPORT is not set

# Disable kernel modules for minimal footprint
# CONFIG_MODULES is not set

# Additional hard trimming (no debug/trace/audit/BPF)
# CONFIG_AUDIT is not set
# CONFIG_DEBUG_FS is not set
# CONFIG_KALLSYMS is not set
# CONFIG_KEXEC is not set
# CONFIG_PROC_KCORE is not set
# CONFIG_MAGIC_SYSRQ is not set
# CONFIG_BPF is not set
# CONFIG_BPF_SYSCALL is not set

# ACPI minimal (platform/IRQ/PCI discovery only)
CONFIG_ACPI=y
# CONFIG_ACPI_SLEEP is not set
# CONFIG_ACPI_PROCESSOR is not set
# CONFIG_ACPI_THERMAL is not set
# CONFIG_ACPI_FAN is not set
# CONFIG_ACPI_POWER is not set
# CONFIG_ACPI_BATTERY is not set
# CONFIG_ACPI_VIDEO is not set
# CONFIG_ACPI_BUTTON is not set
# CONFIG_ACPI_CONTAINER is not set
# CONFIG_ACPI_DOCK is not set
